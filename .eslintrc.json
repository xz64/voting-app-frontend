{
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "max-len": [
      "error",
      80
    ],
    "semi": [
      "error",
      "always"
    ],
    "indent": [
      "warn",
      2
    ],
    "quotes": [
      "error",
      "single",
      {"allowTemplateLiterals": true}
    ],
    "jsx-quotes": [
      "error",
      "prefer-single"
    ],
    "no-trailing-spaces": [
      "error"
    ]
  }
}
